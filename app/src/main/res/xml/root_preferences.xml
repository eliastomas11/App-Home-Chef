<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        app:key="notifications_category"
        app:title="Notifications">

        <SwitchPreferenceCompat
            app:key="notifications"
            app:defaultValue="true"
            app:icon="@drawable/notifications_icon"
            app:title="Enable notifications"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:key="theme_category"
        app:title="Theme">

        <SwitchPreferenceCompat
            app:key="theme"
            app:icon="@drawable/mode_night"
            app:title="Enable Night mode"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:key="privacy_category"
        app:title="Privacy">

        <Preference
            app:key="@string/privacy_pref_key"
            app:icon="@drawable/privacy_icon"
            app:fragment="com.example.chefgram.ui.preferences.PrivacyScreen"
            app:title="Privacy policy"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:key="about_category"
        app:title="About">

        <Preference
            app:key="@string/about_pref_key"
            app:icon="@drawable/about_icon"
            app:fragment="com.example.chefgram.ui.preferences.AboutScreen"

            app:title="About Us"/>

    </PreferenceCategory>

</PreferenceScreen>